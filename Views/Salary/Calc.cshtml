@model HwEmployees.ViewModel.SalaryViewModel

@{ 
    ViewData["Title"] = "Salary Calc";

    var year = new SelectList(Enumerable.Range(2000, DateTime.Now.Year - 2000 + 1)
        .Select(x => new
        {
            Value = x,
            Text = x
        }), "Value", "Text");

    var month = new SelectList(Enumerable.Range(1, 12)
     .Select(x => new
     {
         Value = x,
         Text = System.Globalization.DateTimeFormatInfo.CurrentInfo.GetMonthName(x)
     }), "Value", "Text");
}

<h1>Salary Calc</h1>
<hr />  
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calc" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <input asp-for="EmpId" type="hidden" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Name" class="form-control"></label>
                <input readonly asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicSalary" class="form-control"></label>
                <input readonly asp-for="BasicSalary" class="form-control" />
                <span asp-validation-for="BasicSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="form-control"></label>
                <select asp-for="Year" class="form-control" asp-items="@year"></select>
                <span asp-validation-for="BasicSalary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Month" class="form-control"></label>
                <select asp-for="Month" class="form-control" asp-items="@month"></select>
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus" class="form-control"></label>
                <input   asp-for="Bonus" class="form-control" />
                <span asp-validation-for="Bonus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Discount" class="form-control"></label>
                <input   asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Overtime" class="form-control"></label>
                <input   asp-for="Overtime" class="form-control" />
                <span asp-validation-for="Overtime" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="PenaltiesDays" class="form-control"></label>
                <input   asp-for="PenaltiesDays" class="form-control" />
                <span asp-validation-for="PenaltiesDays" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input   type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Indwx"> Back to list</a>
</div>

@section Scripts{ 
@{ 
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
